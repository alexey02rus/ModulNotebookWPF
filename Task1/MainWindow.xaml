<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        x:Name="window" Title="NoteBook" Height="450" Width="800" Icon="vector-notepad-icon.jpg" Closing="window_Closing">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="MenuItem_Open"/>
        <CommandBinding Command="Save" Executed="MenuItem_Save"/>
        <CommandBinding Command="SaveAs" Executed="MenuItem_SaveAs"/>
        <CommandBinding Command="New" Executed="MenuItem_NewWindow"/>
        <CommandBinding Command="Close" Executed="MenuItem_CloseWindow"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top" VerticalAlignment="Top" Background="#FFEEF5FD" BorderThickness="0,0,0,1" BorderBrush="#FFC0C6CD">
                <MenuItem Header="_Файл">
                    <MenuItem Header="_Открыть" Command="Open"/>
                    <MenuItem Header="_Сохранить" Command="Save"/>
                    <MenuItem Header="Сохранить как" Command="SaveAs"/>
                    <MenuItem Header="_Новое окно" Command="New"/>
                    <Separator/>
                    <MenuItem Header="Выход" Command="Close"/>
                </MenuItem>
                <MenuItem Header="_Правка">
                    <MenuItem Header="_Отменить" Command="Undo" CommandTarget="{Binding ElementName=textBox}"/>
                    <MenuItem Header="_Повторить" Command="Redo" CommandTarget="{Binding ElementName=textBox}"/>
                    <Separator/>
                    <MenuItem Header="_Копировать" Command="Copy" CommandTarget="{Binding ElementName=textBox}"/>
                    <MenuItem Header="_Вставить" Command="Paste" CommandTarget="{Binding ElementName=textBox}"/>
                    <MenuItem Header="_Выделить всё" Command="SelectAll" CommandTarget="{Binding ElementName=textBox}"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <ToolBarTray Grid.Row="1">
            <ToolBar Margin="0,5,0,3" Padding="0,5">
                <ComboBox Margin="5" Padding="5" SelectedIndex="0" Width="200" SelectionChanged="ComboBox_SelectionChanged">
                    <TextBlock Text="Arial" FontSize="14"/>
                    <TextBlock Text="Times New Roman" FontSize="14"/>
                    <TextBlock Text="Verdana" FontSize="14"/>
                </ComboBox>
                <ComboBox Margin="5" Padding="5" SelectedIndex="1" Width="50" FontSize="14" SelectionChanged="ComboBox_SelectionChanged_1">
                    <TextBlock Text="12" FontSize="14"/>
                    <TextBlock Text="14" FontSize="14"/>
                    <TextBlock Text="16" FontSize="14"/>
                </ComboBox>
            </ToolBar>
            <ToolBar Margin="0,5,0,3" Padding="0,5">
                <ToggleButton Click="ToggleButton_Click">
                    <TextBlock Text="B" FontSize="24" FontFamily="Arial" FontWeight="Bold"  Width="35" TextAlignment="Center" Padding="0,4" />
                </ToggleButton>
                <Separator/>
                <ToggleButton Click="ToggleButton_Click_1">
                    <TextBlock Text="I" FontSize="24" FontFamily="Arial" FontStyle="Italic"  Width="35" TextAlignment="Center" Padding="0,4" />
                </ToggleButton>
                <Separator/>
                <ToggleButton Click="ToggleButton_Click_2">
                    <TextBlock Text="U" FontSize="24" FontFamily="Arial" TextDecorations="Underline"  Width="35" TextAlignment="Center" Padding="0,4" />
                </ToggleButton>
            </ToolBar>
            <ToolBar Margin="0,5,0,3" Padding="0,5">
                <StackPanel VerticalAlignment="Center">
                    <RadioButton Content="Черный" IsChecked="True" FontSize="14" VerticalContentAlignment="Center" Padding="5,0,0,0" Margin="2" Width="80" Checked="RadioButton_Checked"/>
                    <RadioButton Content="Красный" FontSize="14" Foreground="Red" VerticalContentAlignment="Center" Padding="5,0,0,0" Margin="2" Width="80" Checked="RadioButton_Checked_1"/>
                </StackPanel>
            </ToolBar>
        </ToolBarTray>
        <TextBox x:Name="textBox" Grid.Row="2" Margin="5" Padding="5" FontSize="14" FontFamily="Arial" TextWrapping="Wrap" BorderThickness="2" VerticalScrollBarVisibility="Auto" TextChanged="textBox_TextChanged" AcceptsReturn="True"/>
    </Grid>
</Window>
